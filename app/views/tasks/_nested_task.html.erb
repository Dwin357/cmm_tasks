<span class='list-group-item ribbon-object'>
<%= render partial: "shared/ribbon" if true %>
  <a href=<%= "\#task-#{task.id}"%> class='list-group-link' data-toggle='collapse'>
    <i class='glyphicon glyphicon-chevron-right toggle-icon'></i>
    <%= task.task_name %>
  </a>
  <a href=<%="/tasks/#{task.id}/task_entries/new"%> class='list-group-create cud-link hidden cud-toggle'>
    <i class='glyphicon glyphicon-plus cud-icon'></i>
  </a>
  <span class='list-group-ud-icons cud-toggle pull-right'>
    <a href=<%="/tasks/#{task.id}/edit"%> class='list-group-update cud-link'>
      <i class='glyphicon glyphicon-pencil cud-icon'></i>
    </a> 
    <a href=<%="/tasks/#{task.id}"%> data-method="delete" data-confirm="This action is final, please confirm" rel="nofollow" class='list-group-delete cud-link'>
      <i class='glyphicon glyphicon-trash cud-icon'></i>
    </a>
  </span>
</span>
<div class='list-group collapse' id=<%= "task-#{task.id}"%>>
  <% task.task_entries.each do |task_entry| %>
    <%= render partial: "task_entries/nested_entry", locals:{task_entry: task_entry}%>
  <% end %>
</div>