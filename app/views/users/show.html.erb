<%= render partial: "shared/left_gutter" %>

<div class='row'>
  <div class='col-xs-10 col-xs-offset-1'>
    <div class='well'>
      <h2><%= @user.username %></h2>
      <p><%= @user.email %></p>
    </div>

    <br>

    <ul class='list-group'>
      <li class='list-group-item active'>
        Projects
      </li>
      <% @user.tasks.each do |task| %>
        <%= render partial: "tasks/task_line_item", locals:{task:task} %>
      <% end %>
    </ul>
  </div>
</div>