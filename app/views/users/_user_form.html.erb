<%= form_for(user, html:{class:"form-horizontal"}) do |f| %>
  <div class='form-group'>
      <%= f.label :username, class:"col-xs-2 control-label" %>
      <div class='col-xs-9'>
        <%= f.text_field :username, class: "form-control", placeholder: "AwesomeSauce" %>
      </div>
  </div>
  <div class='form-group'>
    <%= f.label :password, class: 'col-xs-2 control-label' %>
    <div class='col-xs-9'>
      <%= f.password_field :password, class:"form-control", placeholder: "Pa$$word" %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :password_confirm, class:"col-xs-2 control-label" %>
    <div class='col-xs-9'>
      <%= f.password_field :password_confirm, class:"form-control", placeholder: "Pa$$word" %>
    </div>
  </div>
  <div class='form-group'>
    <div class='col-xs-9 col-xs-offset-2' id='password-feedback'></div>
  </div>
  <div class='form-group'>
    <div class='col-xs-9 col-xs-offset-2'>
      <div class='checkbox'>
        <label>
          <input type='checkbox' name='user[remember_me]'> Remember me
        </label>
      </div>
    </div>
  </div>
  <div class='form-group'>
    <div class='col-xs-10 col-xs-offset-2'>
      <%= f.submit "Signup", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>