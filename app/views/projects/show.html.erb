<div class='row'>
  <div class='col-xs-10 col-xs-offset-1'>
    <h2><%= @project.project_name %></h2>
    <%= link_to("Edit Project", edit_project_path(@project)) %>

    <div class='well'>
      <p>Tasks</p>
    </div>
    <ul class='list-group'>
      <% @project.tasks.each do |task| %>
        <%= render partial: "tasks/task_line_item", locals: {task: task} %>
      <% end %>
    </ul>
  </div>
</div>