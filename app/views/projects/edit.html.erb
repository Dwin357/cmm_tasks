<div class='row'>
  <div class='col-xs-10 col-xs-offset-1'>
    <div class='well'>
      <p>Update project information</p>
    </div>
    <%= render partial: "shared/error_display", locals:{errors: flash[:errors]}%>
    <%= form_for(@project) do |f| %>
      <%= render partial: "project_form_fields", locals:{f:f} %>
    <% end %>
    <p>No longer a project? <%= link_to "Remove Project", project_path(@project), method: :delete, data:{confirm: 'This action is final, please confirm'} %></p>
  </div>
</div>