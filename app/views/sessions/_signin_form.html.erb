<form method='post' action='/sessions'>
  <%= token_tag %>
  <div class='form-group'>
    <label for='username'>Username</label>
    <input 
      type='text' 
      name='session[username]' 
      placeholder='AwesomeSauce' 
      class='form-control'
      <%= "value=#{session[:username]}" if session[:username]%>
    >
  </div>
  <div class='form-group'>
    <label for='password'>Password</label>
    <input type='password' name='session[password]' class='form-control' placeholder='Pa$$word'>
  </div>
  <div class='checkbox'>
    <input type='checkbox' class='form-control' name='session[remember_me]' />
    <label for='remember_me'>Remember me</label>
  </div>
  <div class='form-group'>
    <input type='submit' value='Login'>
  </div>
</form>