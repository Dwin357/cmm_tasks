<%= form_for(customer, html:{class:"form-horizontal"}) do |f| %>
  <div class='form-group'>
    <%= f.label :company, class:"col-xs-2 control-label" %>
    <div class='col-xs-9'>
      <%= f.text_field :company, class: "form-control", placeholder:"Name" %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :address, class:"col-xs-2 control-label" %>
    <div class='col-xs-9'>
      <%= f.text_field :address, class:'form-control', placeholder:"Address" %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :city, class:"sr-only" %>
    <div class='col-xs-4 col-xs-offset-2'>
      <%= f.text_field :city, class:"form-control", placeholder:"City" %>
    </div>
    <%= f.label :state, class:"sr-only" %>
    <div class='col-xs-1'>
      <%= f.text_field :state, class:"form-control", placeholder:"AZ" %>
    </div>
    <%= f.label :zip, class: "sr-only"%>
    <div class='col-xs-2'>
      <%= f.text_field :zip, class:"form-control", placeholder:"Zip" %>
    </div>
  </div>  
  <div class='form-group'>
    <div class='col-xs-10 col-xs-offset-2'>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>