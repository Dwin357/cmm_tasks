<div class='row'>
  <div class='col-xs-10 col-xs-offset-1'>
    <div class='well'>
      <p>Update customer information</p>
    </div>
    <%= render partial: "shared/error_display", locals:{errors: flash[:errors]} %>
    <%= render partial: "customer_form", locals:{customer: @customer} %>
    <p>No longer a customer? <%= link_to "Remove Customer", customer_path(@customer), method: :delete, data: {confirm: 'This action is final, please confirm'} %></p>
  </div>
</div>