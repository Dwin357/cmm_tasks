<div class='row'>
  <div class='col-xs-10 col-xs-offset-1'>
    <h2><%= @customer.company %><span class="badge">@customer.projects.count</span></h2>
    <p><%= @customer.address %></p>
    <p><%= "#{@customer.city}, #{@customer.state} #{@customer.zip}" %></p>

    <div class='well'>
      <p>Open Projects</p>
    </div>
    <ul class='list-group'>
      <% @customer.projects.each do |project| %>
        <%= render partial: "project/project_line_item", locals:{project: project} %>
      <% end %>
    </ul>
    <p>Show Customer Page, under construction</p>
  </div>
</div>